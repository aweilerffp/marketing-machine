# Marketing Machine Backend Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
WEBHOOK_PORT=3002

# Database Configuration
DATABASE_URL=postgresql://mm_user:secure_password_change_in_production@localhost:5432/marketing_machine

# Redis Configuration (for queue and caching)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# OpenAI Configuration (Required)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_IMAGE_MODEL=dall-e-3

# AI Model Configuration
STABLE_DIFFUSION_API_KEY=your-stability-ai-key
MIDJOURNEY_API_KEY=your-midjourney-key

# LinkedIn API (for publishing)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:3001/auth/linkedin/callback

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/marketing-machine.log

# Email Configuration (for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Webhook Security
WEBHOOK_SECRET=your-webhook-secret-key

# Cost Management
MONTHLY_AI_BUDGET=100.00
COST_ALERT_THRESHOLD=80.00

# Company Onboarding
DEFAULT_COMPANY_SETTINGS={"processing_enabled": true, "max_hooks_per_content": 10, "auto_approve_high_score": false}

# Development/Testing
DISABLE_AUTH_FOR_TESTING=false
MOCK_AI_RESPONSES=false