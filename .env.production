# Marketing Machine - Production Environment Variables
NODE_ENV=production

# Server Configuration
PORT=8080
HOST=0.0.0.0
FRONTEND_URL=https://marketing-machine.vercel.app
BACKEND_URL=https://marketing-machine-api.herokuapp.com

# Database Configuration
# Replace with your production PostgreSQL connection string
DATABASE_URL=postgresql://username:password@hostname:port/database_name
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration  
# Replace with your production Redis connection string
REDIS_URL=redis://username:password@hostname:port/0
REDIS_TLS=true

# JWT Configuration
# Generate secure secrets for production
JWT_SECRET=your_production_jwt_secret_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_production_refresh_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# LinkedIn API Configuration
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=https://marketing-machine.vercel.app/auth/linkedin/callback

# CORS Configuration
CORS_ORIGINS=https://marketing-machine.vercel.app,https://marketing-machine-staging.vercel.app

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_production_session_secret
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=mp3,mp4,wav,m4a,webm

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Queue Configuration
QUEUE_REDIS_URL=redis://username:password@hostname:port/1
QUEUE_CONCURRENCY=5
QUEUE_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=60000

# Webhook Configuration
WEBHOOK_SECRET=your_production_webhook_secret
WEBHOOK_TIMEOUT=30000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your_email@company.com
SMTP_PASS=your_email_password

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_newrelic_key_here

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_WEBHOOKS=true
ENABLE_IMAGE_GENERATION=true
ENABLE_SMART_SCHEDULING=true